pipeline{
    agent { node { label 'agent1'} }

    stages{
        stage('init'){
            steps{
                sh '''
                 ls -ltr
                 pwd
                 terraform init
                '''
            }
        }
        stage('Plan'){
            steps{
                sh'''
                 ls -ltr
                 pwd
                 terraform plan
                '''
            }    
        }
    }
    post{
        always{
            echo 'iam always running whether job is sucess or not'
        }
        success{
            echo 'iam running when job is success'
        }
        failure{
            echo 'iam running when the job is failure'
        }
    }
}